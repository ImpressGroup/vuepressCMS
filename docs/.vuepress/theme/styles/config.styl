.content-box
  width: 66.66%
  float: left
  .box-img
    width: 50%
    float: left
  .box-txt
    position: relative
    background: #EEE
    width: 50%
    padding: 0 20px
    float: left
    &::before
      border-left: 22px solid transparent
      border-right: 22px solid transparent
      border-bottom: 22px solid #CCC
      content: ''
      display: block
      height: 0
      margin: auto
      position: absolute
      top: -22px; left: 0; right: 0;
      width: 0
.content-box:nth-child(3n+1)
  .box-txt
    &::before
      border-top: 22px solid transparent
      border-left: none
      border-bottom: 22px solid transparent
      border-right: 22px solid #CCC
      left: -22px
      top: 0
      bottom: 0
      right: initial

.content-box:nth-child(3n-1)
  width: 33.33%
  float: right
  .box-img
    width: 100%
  .box-txt
    width: 100%
    &::before
      border-left: 22px solid transparent
      border-top: none
      border-right: 22px solid transparent
      border-bottom: 22px solid #CCC
      left: 0
      top: -22px
      bottom: initial
      right: 0

.content-box:nth-child(3n+3)
  .box-img
    float: right
  .box-txt
    float: left
    &::before
      border-bottom: 22px solid transparent
      border-right: none
      border-top: 22px solid transparent
      border-left: 22px solid #CCC
      left: initial 
      top: 0
      bottom: 0
      right: -22px

.category-list::after
  clear: both
  content: " "
  display: block
  

.travel 
  .content
    max-width: 100%
    padding: 0
    *
      box-sizing: border-box

.share-icon
  float: left
  padding: 20px
