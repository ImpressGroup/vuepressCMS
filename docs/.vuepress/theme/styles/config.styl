    max-width: 100%

.navbar .site-name
  text-indent: -9999px
  background: url('/images/logo.png') no-repeat
  width: 200px
  height: 40px
  background-size: 100%

@media only screen and (min-width: 600px) and (max-width: 799px)
  .content-box:nth-child(odd)
    width: 100%
    .box-img, .box-txt
      width: 50%
    .box-img
      float: left
    .box-txt
      float: right
      &::before
        border-top: 22px solid transparent
        border-left: none
        border-bottom: 22px solid transparent
        border-right: 22px solid #CCC
        left: -22px
        top: 0
        bottom: 0
        right: initial
  .content-box:nth-child(even) 
    width: 100%
    .box-img, .box-txt
      width: 50%
    .box-img
      float: right
    .box-txt
      float: left
      &::before
        border-top: 22px solid transparent
        border-left: 22px solid #CCC
        border-bottom: 22px solid transparent
        border-right: none
        left: initial 
        top: 0
        bottom: 0
        right: -22px

@media only screen and (max-width: 599px)
  .content-box:nth-child(odd)
    width: 100%
    .box-img, .box-txt
      width: 100%
      float: none
    .box-txt
      &::before
        border-left: 22px solid transparent
        border-right: 22px solid transparent
        border-top: none
        border-bottom: 22px solid #CCC
        left: 0
        top: -22px
        bottom: initial
        right: 0
  .content-box:nth-child(even)
    width: 100%
    .box-img, .box-txt
      width: 100%
      float: none

